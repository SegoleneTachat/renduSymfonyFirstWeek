{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Article list</h1>

    {% for entity in entities %}
        <h3>{{ entity.title }}</h3>
        <img src="{{ vich_uploader_asset(entity, 'image') | imagine_filter('my_thumb') }}" />
        <a href="{{ path('article_show', { 'id': entity.id }) }}">Voir l'article</a>

    {% endfor %}



{% endblock %}
